@page
@model Semester_3_Projekt.Pages.ReportsModel
@{
}


<style>
    body {
        font-family: Arial, sans-serif;
    }
    .alert-popup {
        background-color: #f8d7da;
        color: #721c24;
        padding: 10px;
        margin-bottom: 10px;
        border: 1px solid #f5c6cb;
        border-radius: 3px;
    }
    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }
    th, td {
        border: 1px solid #ddd;
        text-align: left;
        padding: 8px;
    }
    th {
        background-color: #f2f2f2;
        cursor: pointer;
    }
    .filter-section {
        background-color: #f9f9f9;
        padding: 15px;
        margin-top: 10px;
        border: 1px solid #ddd;
        border-radius: 3px;
    }
</style>


<div class="reports-tab">
        <h2>Reports tab</h2>
        <div class="alert-popup">Alert popup</div>
    <table id="reportsTable">
        <tr>
            <th onclick="sortTable(0)">Batch ID</th>
            <th onclick="sortTable(1)">Type</th>
            <th onclick="sortTable(2)">Amount</th>
            <th onclick="sortTable(3)">Success</th>
            <th onclick="sortTable(4)">Date</th>
            <th onclick="sortTable(5)">Link</th>
        </tr>
    <!-- Table rows will be here -->
    </table>
</div>

<div class="filter-section">
    <h3>Advanced filters</h3>
    <label for="dateAfter">Date after:</label>
    <input type="date" id="dateAfter">

    <label for="dateBefore">Date before:</label>
    <input type="date" id="dateBefore">

    <label for="minAmount">Minimum Amount:</label>
    <input type="number" id="minAmount">

    <label for="maxAmount">Maximum Amount:</label>
    <input type="number" id="maxAmount">

    <label for="minSuccessRate">Minimum Success rate:</label>
    <input type="number" id="minSuccessRate">

    <label for="typeFilter">Type:</label>
    <select id="typeFilter">
    <option value="">Select Type</option>
    <!-- Option values will be here -->
    </select>
</div>
