@model Semester_3_Projekt.Controllers.LoginController
@{
    ViewData["Title"] = "Logout";
}


<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f4f4;
        color: #333;
        line-height: 1.6;
    }

    .heroContainer {
        max-width: 500px;
        margin: 20px auto;
        padding: 20px;
        text-align: center;
        background-color: #fff;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.2);
    }

    h2 {
        color: #444;
    }

    .logoutBtn {
        border: none;
        padding: 10px 15px;
        cursor: pointer;
        font-weight: bold;
        transition: background-color 0.2s;
        border-radius: 5px;
        color: white;
        background-color: #f44336;
    }

        .logoutBtn:hover {
            opacity: 0.9;
        }

        .logoutBtn:active {
            transform: translateY(2px);
        }
</style>


<body>
    @*Logout form, you see this when you are logged in and click the logout button in the navbar*@
    <div class="heroContainer">
            <h2>Logout</h2>
            <p>Are you sure you want to logout?</p>
            <form action="/Login/PerformLogout" method="post">
                <!-- Update the action URL as necessary -->
                <button type="submit" class="logoutBtn">Logout</button>
        </form>
    </div>
</body>



<script src="js/jquery.js" type="text/javascript"></script>
<script type="text/javascript">

    //Script for logout
    $(document).ready(function () {
        $("#logoutForm").submit(function (e) {
            e.preventDefault();
            $.ajax({
                type: "POST",
                url: "/Login/Logout",
                success: function (data) {
                    if (data == "True") {
                        window.location.href = "/Login/Index";
                    }
                    else {
                        alert("Logout failed");
                    }
                }
            });
        });
    });

</script>